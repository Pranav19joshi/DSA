class Solution {
public:
    long long modPow(long long base, long long exp, long long mod) {
        long long result = 1;
        while (exp > 0) {
            if (exp & 1)
                result = (result * base) % mod;
            base = (base * base) % mod;
            exp >>= 1;
        }
        return result;
    }

    int countGoodNumbers(long long n) {
        const long long MOD = 1e9 + 7;
        long long e = (n + 1) / 2;
        long long o = n / 2;

        long long evenWays = modPow(5, e, MOD);
        long long oddWays  = modPow(4, o, MOD);

        return (evenWays * oddWays) % MOD;
    }
};
