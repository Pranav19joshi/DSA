class Solution {
  public:
    Node* insertAtPos(Node* head, int p, int x) {
        Node* node = new Node(x);
        Node* temp = head;
        for (int i = 0; i < p; i++) {
            temp = temp->next;
        }
        node->next = temp->next;
        if (temp->next) temp->next->prev = node;
        temp->next = node;
        node->prev = temp;

        return head;
    }
};
