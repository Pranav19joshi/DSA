/* Structure of Node
struct Node {
    int data;
    struct Node *next;
    struct Node *prev;
};
*/

class Solution {
  public:
    Node* reverse(Node* head) {
        if (!head) return nullptr; 

        Node* curr = head;
        Node* temp = nullptr;
        while (curr) {
            temp = curr->prev;
            curr->prev = curr->next;
            curr->next = temp;
            curr = curr->prev;
        }
        if (temp) head = temp->prev;

        return head;
    }
};
