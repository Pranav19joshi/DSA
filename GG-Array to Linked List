/*
// Representation of a node
class Node {
public:
    int data;
    Node* next;

    Node(int d) {
        data = d;
        next = NULL;
    }
};
*/

class Solution {
  public:
    Node* arrayToList(vector<int>& arr) {
         Node* head = new Node(arr[0]);
        head->next = NULL;
        Node* temp = head;
        for(int i=1 ; i<arr.size() ; i++){
            temp -> next = new Node(arr[i]);
            temp = temp->next;
            
        }
        return head;
        
    }
